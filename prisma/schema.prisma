generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Blog {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  content  String
  image    String?
  likes    Int      @default(0)
  likedBy  String[]
  comments Comment[]
}

model Comment {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  comment  String
  likes    Int      @default(0)
  replies  Reply[]
}

model Reply {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  comment  String
  likes    Int      @default(0)
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String   @unique
  likes    String[]
  comments Comment[]
}
